# MetroCity Backend Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3001
VERSION=1.0.0

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration (when implemented)
DATABASE_URL=postgresql://username:password@localhost:5432/metrocity_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (when implemented)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# External Services (when needed)
OPENAI_API_KEY=
GOOGLE_ANALYTICS_ID=

# Development/Testing
MOCK_DATABASE=true
MOCK_CACHE=true
MOCK_ANALYTICS=true
ENABLE_DEBUG_ROUTES=true

# Performance Monitoring
ENABLE_PROFILING=false
MEMORY_MONITORING=true

# File Upload (when implemented)
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Email Configuration (when implemented)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@metrocity.edu